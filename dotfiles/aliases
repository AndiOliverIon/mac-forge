# Navigation shortcuts
alias forge="cd ~/mac-forge"
alias work="cd ~/work"
alias perf="cd ~/work/ardis-perform"
alias demo="cd ~/work/ardis-demo"
alias gpt="cd ~/work/ardis.tools.extensions"

# Git
alias gs="git status"
alias gco="git checkout"
alias gp="git pull"
alias gfo="git fetch origin"
alias gpu="git push"

# Docker
alias dps="docker ps"
alias dcu="docker compose up"
alias dcd="docker compose down"

# Common folders
alias doc="cd ~/Documents"
alias desk="cd ~/Desktop"
alias dev="cd ~/dev"
alias oliver="cd ~/"
alias down="cd ~/Downloads"

# system commands
alias reloadterm="source ~/.zshrc"
alias showeth='networksetup -listallhardwareports | awk "/Hardware Port|Device/"; echo; for i in $(networksetup -listallhardwareports | awk "/Device/ {print \$2}"); do ip=$(ipconfig getifaddr $i 2>/dev/null); echo "$i : ${ip:-no-ip}"; done'


# Applications
alias rider="open -a 'Rider.app'"

# borg script commands
alias bdr="~/mac-forge/scripts/db-restore.sh"
alias bds="~/mac-forge/scripts/db-snapshot.sh"
alias bdc="~/mac-forge/scripts/db-clear.sh"

# work drives
alias vsql="cd /Volumes/shared/sql"
alias cloudforge='cd "$HOME/Library/Mobile Documents/com~apple~CloudDocs/forge"'
alias snapshots="cd /Users/oliver/sql/docker/snapshots"
alias snap=snapshots

# work aliases for commands
alias ardis-migrate="~/mac-forge/scripts/ardis-migrate.sh"
alias am="~/mac-forge/scripts/ardis-migrate.sh"
